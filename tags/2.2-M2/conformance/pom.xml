  </parent>

  <!-- Temporary patch to be deleted when the following issue will be fixed:
       http://jira.codehaus.org/browse/MDEPLOY-57 -->
  <profiles>
    <profile>
      <id>geotidy</id>
      <properties>
        <java.version>1.6</java.version>
      </properties>
      <distributionManagement>
        <repository>
           <id>geotidy</id>
           <name>GeoTools 3.0 binaries</name>
           <url>dav:http://geotidy.geomatys.fr/repository/</url>
           <uniqueVersion>false</uniqueVersion>
        </repository>
      </distributionManagement>
    </profile>
  </profiles>



  <!-- ==================================================== -->
  <!--     Project description                              -->
  <!-- ==================================================== -->
  <groupId>org.opengis</groupId>
  <artifactId>conformance</artifactId>
  <packaging>jar</packaging>
  <name>Conformance tests</name>
  <description>
    Utility methods for testing conformance of a GeoAPI implementation.
    Provides Validators for testing the conformance of an existing instance,
    and suites of JUnit tests.
  </description>



  <!-- ==================================================== -->
  <!--     Developers and contributors                      -->
